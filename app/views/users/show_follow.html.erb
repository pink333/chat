  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users follow">
        <% @users.each do |user| %>
          <p><%= link_to user.username, user %></p>
          <p><%= image_tag user.picture.url if user.picture? %></p>
        <% end %>
      </ul>  
    <% end %>
  </div>