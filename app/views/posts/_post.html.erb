<h3><%= link_to post.id, post %></h3>
<h3><%= post.belo %></h3>
<h3><%= post.content %></h3>

<h3>いいね件数: <%= post.likes.count %></h3>
<% if current_user.already_liked?(post) %>
  <%= button_to 'いいねを取り消す', post_like_path(post), method: :delete %>
<% else %>
  <%= button_to 'いいね', post_likes_path(post) %>
<% end %>

<% if  current_user == post.user %>
<div class="cd"><%= link_to '削除', [post.user, post], method: :delete, class: "buttn", date:{confirm: 'Are you sure'} %></div>
 <% end %>
</div>
